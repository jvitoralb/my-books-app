generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  email       String @unique
  name        String 
  pswd_hash   String 
  pswd_salt   String 
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  last_access DateTime? 
}

model Book {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  author      String?
  about       String?
  section     String?
  created_at  DateTime @default(now())
}
